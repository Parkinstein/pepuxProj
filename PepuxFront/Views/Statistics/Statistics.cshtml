@using System.ServiceModel.Configuration
@using Microsoft.Ajax.Utilities
@using PepuxFront.Controllers
@model PepuxFront.IpServiceLink.addrec
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="control_grid">
    <table id="table_stats" class="display">
        <thead>
            <tr>
                <th>Идентификатор конференции</th>
                <th>Имя конференции (ВПК)</th>
                <th>Время начала</th>
                <th>Время окончания</th>
                <th>Длительность</th>
                <th>Количество участников</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div id="popup_block" class="hide">
    <div id="popup_content" class="b-popup b-popup-content">
        <table id="table_parts">
            <thead>
                <tr>
                    <th>Имя конференции (ВПК)</th>
                    <th>Роль</th>
                    <th>Алиас</th>
                    <th>Время начала</th>
                    <th>Время окончания</th>
                    <th>Длительность</th>
                    <th>Отображаемое имя</th>
                    <th>Протокол</th>
                    <th>Устройство</th>
                    <th>IP-адрес:порт</th>
                    <th>Причина отключения</th>
                    <th>Видео статистика</th>
                    <th>Аудио статистика</th>
                    <th>Презентация статистика</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    var oStatisticsTable;
    var oParticipantsTable;
    var cobaMgntAddress = "10.129.15.128";

    $(document).ready(function() {
        oStatisticsTable = $('#table_stats').DataTable({
            "ordering": true,
            "searching": true,
            "paging": true,
            "autoWidth": false,
            "processing": true,
            "order": [[ 2, 'asc' ]],
            "pageLength": 30,
            "lengthChange": false,

            "ajax": {
                "type": "POST",
                "url": "/Statistics/GetHistoryVMR",
                "contentType": 'application/json; charset=utf-8',
                "data": function(data) { return data = JSON.stringify(data); }
            },

            "columns": [
                { "data": "id", "visible": true },
                { "data": "name" },
                { "data": "start_time2" },
                { "data": "end_time2" },
                { "data": "duration", "searchable": false },
                { "data": "participant_count",
                  "render": function (data, type, full, meta) {
                      return full.participant_count + " участников <a id = 'partslink' href='#' onclick='display_parts()'>(подробнее...)</a>";
                  }
                },
            ],

            "language": {
                "processing": "Подождите...",
                "search": "Поиск:",
                "lengthMenu": "Показать _MENU_ записей",
                "info": "Записи с _START_ до _END_ из _TOTAL_ записей",
                "infoEmpty": "Записи с 0 до 0 из 0 записей",
                "rowSelected": "0 рядов выделено",
                "infoFiltered": "(отфильтровано из _MAX_ записей)",
                "infoPostFix": "",
                "loadingRecords": "Загрузка записей...",
                "zeroRecords": "Записи отсутствуют.",
                "emptyTable": "В таблице отсутствуют данные",
                "paginate": {
                    "first": "Первая",
                    "previous": "Предыдущая",
                    "next": "Следующая",
                    "last": "Последняя"
                },
                "aria": {
                    "sortAscending": ": активировать для сортировки столбца по возрастанию",
                    "sortDescending": ": активировать для сортировки столбца по убыванию"
                }
            },
        });
    });
    function popup_parts_table() {
        oParticipantsTable = $('#table_parts').DataTable({
            "ordering": true,
            "searching": true,
            "paging": true,
            "autoWidth": false,
            "processing": true,
            "lengthChange": false,
            "order": [[2, 'asc']],
            "pageLength": 30,

            "ajax": {
                "type": "POST",
                "url": "/Statistics/GetHistoryParticipants?id=" + id,
                "contentType": 'application/json; charset=utf-8',
                "data": function (data) { return data = JSON.stringify(data); }
            },

            "columns": [
                { "data": "name" },
                { "data": "role", "searchable": false },
                { "data": "local_alias" },
                { "data": "remote_alias" },
                { "data": "display_name" },
                { "data": "start_time2" },
                { "data": "end_time2" },
                { "data": "duration" },
                { "data": "protocol" },
                { "data": "vendor" },
                { "data": "remote_address" },
                { "data": "remote_port" },
                { "data": "disconnect_reason" },
                { "data": "stream_type", "visible": false, "searchable": false },
                { "data": "start_time2", "visible": false, "searchable": false },
                { "data": "end_time2", "visible": false, "searchable": false },
                { "data": "tx_bitrate", "visible": false, "searchable": false },
                { "data": "tx_codec", "visible": false, "searchable": false },
                { "data": "tx_resolution", "visible": false, "searchable": false },
                { "data": "rx_bitrate", "visible": false, "searchable": false },
                { "data": "rx_codec", "visible": false, "searchable": false },
                { "data": "rx_resolution", "visible": false, "searchable": false },
            ],

            "language": {
                "processing": "Подождите...",
                "search": "Поиск:",
                "lengthMenu": "Показать _MENU_ записей",
                "info": "Записи с _START_ до _END_ из _TOTAL_ записей",
                "infoEmpty": "Записи с 0 до 0 из 0 записей",
                "infoFiltered": "(отфильтровано из _MAX_ записей)",
                "infoPostFix": "",
                "loadingRecords": "Загрузка записей...",
                "zeroRecords": "Записи отсутствуют.",
                "emptyTable": "В таблице отсутствуют данные",
                "paginate": {
                    "first": "Первая",
                    "previous": "Предыдущая",
                    "next": "Следующая",
                    "last": "Последняя"
                },
                "aria": {
                    "sortAscending": ": активировать для сортировки столбца по возрастанию",
                    "sortDescending": ": активировать для сортировки столбца по убыванию"
                }
            },

        });
    };

    setInterval("refresh_stats()", 3000000);

    function refresh_stats() {
        if (oStatisticsTable != null)
            oStatisticsTable.ajax.reload();
    };

    function refresh_parts() {
        if (oParticipantsTable != null)
            oParticipantsTable.ajax.reload();
    };

    $('#table_stats tbody').on('click', 'tr', function() {
        id = oStatisticsTable.cell(oStatisticsTable.row(this).index(), 0).data();
    });

    function display_parts() {
        event.stopPropagation();
        document.getElementById("popup_block").className = "b-popup b-popup-content";
        if (oParticipantsTable == null) {
            popup_parts_table();
        } else {
            refresh_parts();
        }
    };

    $(document).on("click", function (e) {
        if (!$("#popup_content").is(e.target) && $("#popup_content").has(e.target).length == 0 && document.getElementById("popup_block").className == "b-popup b-popup-content") {
            document.getElementById("popup_block").className = "hide";
        };
    });

    (function ($) {
        $('#table_stats').slimScroll({
            height: '80%',
            width: '100%',
            margin: '30px',
            size: '7px',
            position: 'right',
            color: '#332383',
            distance: '0px'
        });
        $('#table_parts').slimScroll({
            height: '350px',
            width: '100%',
            size: '7px',
            position: 'right',
            color: '#332383',
            distance: '0px'
        });
    })(jQuery);
</script>